<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="phiNdus.fundus.Core.Domain" namespace="phiNdus.fundus.Core.Domain.Entities">

  <class name="User" table="[User]">
    <id name="Id">
      <generator class="hilo" />
    </id>
    <version name="Version" />
    <property name="FirstName" />
    <property name="LastName" />
    <one-to-one name="Membership" class="Membership" cascade="all-delete-orphan" />
    <many-to-one name="Role" column="RoleId" lazy="false" />
  </class>
</hibernate-mapping>