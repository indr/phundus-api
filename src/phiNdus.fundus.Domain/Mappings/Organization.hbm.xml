<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="phiNdus.fundus.Domain" namespace="phiNdus.fundus.Domain.Entities">

  <class name="Organization" table="[Organization]">
    <id name="Id">
      <generator class="native" />
    </id>
    <version name="Version" />
    <property name="Name" />
    <property name="Address" />
    <property name="Coordinate" />
    <property name="Startpage" />
    <property name="EmailAddress" />
    <property name="Website" />
    <property name="CreateDate" update="false" />

    <set name="Memberships" cascade="all-delete-orphan" lazy="true" inverse="true" >
      <key column="OrganizationId" />
      <one-to-many class="OrganizationMembership" />
    </set>
  </class>
</hibernate-mapping>