<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Phundus.Core" namespace="Phundus.Core.IdentityAndAccessCtx.DomainModel">

  <class name="User" table="[User]">
    <id name="Id">
      <generator class="native" />
    </id>
    <version name="Version" />
    <property name="FirstName" />
    <property name="LastName" />
    <property name="Street" />
    <property name="Postcode" />
    <property name="City" />
    <property name="MobileNumber" />
    
    <one-to-one name="Membership" class="Membership" cascade="all-delete-orphan" />
    <many-to-one name="Role" column="RoleId" lazy="false" />

	<!--
    <set name="Memberships" cascade="all-delete-orphan" lazy="true" inverse="true" >
      <key column="UserId" />
      <one-to-many class="Phundus.Core.Entities.OrganizationMembership" />
    </set>
	-->

    <property name="JsNumber" />

    <many-to-one name="SelectedOrganization" column="SelectedOrganizationId" />
  </class>
</hibernate-mapping>