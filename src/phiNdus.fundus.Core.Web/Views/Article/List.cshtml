@model phiNdus.fundus.Core.Web.Models.ArticleListModel

@{
    ViewBag.Title = "List";
}

@section Breadcrumbs {
     @Html.ActionLink("Artikel", "List") &gt; &Uuml;bersicht
}

@*
<h2>List</h2>*@

<p>
    @Html.ActionLink("Neuer Artikel hinzufügen", "Create")
</p>
<table>
    <tr>
        <th>
            Id
        </th>
        @foreach (var heading in Model.Headings)
        {
            <th>
                @heading.Caption
            </th>
        }
        <th></th>
    </tr>
    
    @foreach (var item in Model.Items) {
        <tr>
            <td>
                @item.Id.ToString()
            </td>
            @foreach (var heading in Model.Headings)
            {
                <td>
                    @item.GetPropertyValue(heading.Id)
                </td>
            }
             <td>
                 @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                 @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                 @Html.ActionLink("Delete", "Delete", new { id = item.Id })
             </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Neuer Artikel hinzufügen", "Create")
</p>
