@model OrdersViewModel

@{
    ViewBag.Title = "Abgeschlossene Bestellungen";
}

<h2>@ViewBag.Title</h2>
<p></p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nummer</th>
            <th>Datum</th>
            <th>Reservierer</th>
            <th>Anzahl Artikel</th>
            <th>Abgeschlossen am</th>
            <th>Abgeschlossen von</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items.Count == 0)
        {
            <tr>
                <td class="no-data" colspan="7">Keine abgeschlossenen Bestellungen vorhanden.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.CreateDate
                    </td>
                    <td>
                        @item.ReserverName
                    </td>
                    <td>
                        @item.ItemCount
                    </td>
                    <td>
                        @item.ModifyDate
                    </td>
                    <td>
                        @item.ModifierName
                    </td>
                    <td>
                        <a href="#">Anzeigen</a> |
                        <a href="#">PDF drucken</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
