@model phiNdus.fundus.Core.Business.Dto.UserDto[]
           
@{
    ViewBag.Title = "List";
}

@section Breadcrumbs {
     @Html.ActionLink("Benutzer", "Index") &gt; &Uuml;bersicht
}

@*<h2>List</h2>*@

<!--
<p>
    @Html.ActionLink("Create New", "Create")
</p>
-->
<table class="table table-bordered table-striped">
    <tr>
        <th>Vorname</th>
        <th>Name</th>
        <th>E-Mail-Adresse</th>
        <th>Rolle</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.ActionButton("Details", ActionButtonIcon.Detail, "Details", new { id = item.Id })
            @Html.ActionButton("Bearbeiten", ActionButtonIcon.Edit, "Edit", new { id = item.Id })
            @Html.ActionButton("Löschen", ActionButtonIcon.Remove, "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
