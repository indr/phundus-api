    <section name="hibernate-configuration" type="NHibernate.Cfg.ConfigurationSectionHandler, NHibernate" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler" />
    <sectionGroup name="elmah">
      <section name="security" requirePermission="false" type="Elmah.SecuritySectionHandler, Elmah" />
      <section name="errorLog" requirePermission="false" type="Elmah.ErrorLogSectionHandler, Elmah" />
      <section name="errorMail" requirePermission="false" type="Elmah.ErrorMailSectionHandler, Elmah" />
      <section name="errorFilter" requirePermission="false" type="Elmah.ErrorFilterSectionHandler, Elmah" />
    </sectionGroup>
  </configSections>
  <appSettings>
    <add key="webpages:Version" value="2.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="PreserveLoginUrl" value="true" />
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
    <add key="ServerUrl" value="localhost" />
    <add key="FeedbackRecipients" value="admin@test.phundus.ch" />
    <add key="MaintenanceMode" value="false" />
    <add key="MigrationTags" value="" />
    <add key="MigrationProfile" value="ResetDatabase" />
    <add key="SmtpHost" value="smtp.mailgun.org" />
    <add key="SmtpPort" value="587" />
    <add key="SmtpEnableSsl" value="true" />
    <add key="SmtpUserName" value="postmaster@mg.phundus.ch" />
    <add key="SmtpPassword" value="" />
    <add key="SmtpFrom" value="no-reply@test.phundus.ch" />
    <add key="elmah.mvc.disableHandler" value="false" />
    <add key="elmah.mvc.disableHandleErrorFilter" value="false" />
    <add key="elmah.mvc.requiresAuthentication" value="true" />
    <add key="elmah.mvc.IgnoreDefaultRoute" value="false" />
    <add key="elmah.mvc.allowedRoles" value="Admin" />
    <add key="elmah.mvc.allowedUsers" value="*" />
    <add key="elmah.mvc.route" value="elmah" />
    <add key="StorageConnectionString" value=""/>
    <add key="StorageShareName" value="test"/>
    <add key="StorageBasePublicUrl" value="https://phundus.file.core.windows.net/test/"/>
    <add key="StorageSharedAccessSignature" value="?sv=2018-03-28&amp;ss=bf&amp;srt=sco&amp;sp=rwdlac&amp;se=2020-07-01T08:30:00Z&amp;st=2019-07-01T08:30:00Z&amp;spr=https,http&amp;sig=eHhwa0XNa%2FutMolGRqouuC%2FCaMEgthtmN8aQhny1XMQ%3D"/>
  </appSettings>
  <connectionStrings>
    <add name="phundus" connectionString="Server=localhost\SQLEXPRESS; Database=phundus-dev; User Id=sa; Password=1234" providerName="System.Data.SqlClient" />
  </connectionStrings>
  <runtime>
