@model phiNdus.fundus.Web.ViewModels.ShopArticleViewModel


    <h2>@Model.Caption</h2>
    <p></p>
    <div class="tabbable tabs-left">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#@Model.Id-D" data-toggle="tab">Beschreibung</a></li>
            <li class=""><a href="#@Model.Id-I" data-toggle="tab">Bilder (@Model.Images.Count)</a></li>
            <li class=""><a href="#@Model.Id-A" data-toggle="tab">Verfügbarkeit</a></li>
            <li class=""><a href="#@Model.Id-L" data-toggle="tab">Ausleihen</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="@Model.Id-D">
                @Html.Raw(Model.Description)
            </div>
            <div class="tab-pane" id="@Model.Id-I">
                <ul class="thumbnails" data-target="#modal-gallery" data-toggle="modal-gallery">
                    @foreach (var each in Model.Images)
                    {
                        <li>
                            <a rel="gallery" class="thumbnail" href="@Html.Raw(Url.Content(each.FileName))" title="@Path.GetFileName(each.FileName)">
                                <img src="@String.Concat(Html.Raw(Url.Content(each.FileName)), ".ashx?maxwidth=150&maxheight=150")" />
                            </a>
                        </li>
                    }
                </ul>
            </div>
            <div class="tab-pane" id="@Model.Id-A">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Datum</th>
                            <th>Menge</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var each in Model.Availabilities)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => each.Date)</td>
                                <td>@Html.DisplayFor(m => each.Amount)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="tab-pane" id="@Model.Id-L">
                @if (!Request.IsAuthenticated)
                {
                    <p>Melden Sie sich an, um einen Artikel auszuleihen.</p>
                }
                else
                {
                using (Ajax.BeginForm("AddToCart", "Shop", new { }, new AjaxOptions { OnSuccess="alert('Der Artikel wurde erfolgreich in den Warenkorb gelegt.');", OnFailure="alert('Fehler beim Ablegen des Artikels in den Warenkorb.');" }, new { @class = "form-horizontal add-to-cart" }))
                {
                    <fieldset>
                        @Html.HiddenFor(m => m.CartItem.Id)
                        @Html.HiddenFor(m => m.CartItem.Version)
                        @Html.HiddenFor(m => m.CartItem.ArticleId)
                        @*TODO: Warum den Preis?*@
                        @Html.HiddenFor(m => m.CartItem.LineTotal)

                        <div class="control-group">    
                            @Html.LabelFor(model => model.CartItem.Begin, new { @class = "control-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.CartItem.Begin)
                                @Html.ValidationMessageFor(model => model.CartItem.Begin)
                            </div>
                        </div>

                        <div class="control-group">    
                            @Html.LabelFor(model => model.CartItem.End, new { @class = "control-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.CartItem.End)
                                @Html.ValidationMessageFor(model => model.CartItem.End)
                            </div>
                        </div>

                        <div class="control-group">    
                            @Html.LabelFor(model => model.CartItem.Amount, new { @class = "control-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.CartItem.Amount)
                                @Html.ValidationMessageFor(model => model.CartItem.Amount)
                            </div>
                        </div>

                        <div class="form-actions">
                            @Html.SubmitButton("» in den Warenkorb")
                        </div>
                    </fieldset>
                }
                }
            </div>
        </div>
    </div>


