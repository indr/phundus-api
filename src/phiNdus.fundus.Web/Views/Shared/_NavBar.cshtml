@using Phundus.Web
@model phiNdus.fundus.Web.ViewModels.Layout.NavBarModel

<div class="header">
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation" data-ng-controller="NavCtrl">
        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#js-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="/shop" title="phundus">phundus</a>
            </div>

            <div class="collapse navbar-collapse" id="js-navbar-collapse">

                @*<form class="navbar-form navbar-left" role="search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Suchen und phinden!" data-ng-model="queryString">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default" data-ng-click="search()" title="phinden!">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                </form>*@

                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button"
                           aria-haspopup="true" aria-expanded="false">Organisationen <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @foreach (var each in Model.Memberships)
                            {
                                <li><a href="/#/organizations/@each.OrganizationGuid">@each.OrganizationName</a></li>
                            }
                            @if (Model.Memberships.Count > 0)
                            {
                                <li class="divider"></li>
                            }
                            <li><a href="/#/organizations">Suchen</a></li>
                        </ul>
                    </li>
                    
                    @if (Request.IsAuthenticated && User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a href="/#/users/@Model.UserId/orders/">Bestellungen</a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li data-access-level="accessLevels.admin" class="dropdown">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button"
                               aria-haspopup="true" aria-expanded="false">Administration <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/#/admin/users/">Benutzer</a></li>
                                <li><a href="/#/admin/organizations/">Organisationen</a></li>
                                <li class="divider"></li>
                                <li><a href="/#/admin/event-log">Ereignislog</a></li>
                                <li><a href="/#/admin/schema-update">Schema-Update</a></li>
                                <li><a href="/elmah" target="_blank">ELMAH</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @if (Request.IsAuthenticated && User.Identity.IsAuthenticated)
                    {
                        <li data-access-level="accessLevels.user" title="Warenkorb">
                            <a href="/#/cart" data-container="body" data-toggle="popover" data-placement="bottom" data-trigger="manual" data-content="Artikel hinzugefügt." id="popover-glyphicon-cart"><span class="glyphicon glyphicon-shopping-cart"></span><span class="visible-xs-inline"> Warenkorb</span></a>
                        </li>
                        <li data-access-level="accessLevels.user" title="@User.Identity.Name">
                            <a href="/#/users/@Model.UserId"><span class="glyphicon glyphicon-user"></span><span class="visible-xs-inline loggedOnTag"> @User.Identity.Name</span></a>
                        </li>
                        <li data-access-level="accessLevels.user" class="dropdown">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button"
                               aria-haspopup="true" aria-expanded="false"><span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/#/users/@Model.UserId/account">Einstellungen</a></li>
                                <li><a href="/#/logout" class="logOffTag">Abmelden</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li data-access-level="accessLevels.anon"><a href="/#/signup">Registrieren</a></li>
                        <li data-access-level="accessLevels.anon"><a href="/#/login">Anmelden</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
