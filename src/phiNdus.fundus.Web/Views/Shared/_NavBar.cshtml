                            <li>@Html.ActionLink("Bestätigte", OrdersActionNames.Approved, ControllerNames.Orders)</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Abgeschlossene", OrdersActionNames.Closed, ControllerNames.Orders)</li>
                            <li>@Html.ActionLink("Abgelehnte", OrdersActionNames.Rejected, ControllerNames.Orders)</li>
                        </ul>
                    }
                    else
