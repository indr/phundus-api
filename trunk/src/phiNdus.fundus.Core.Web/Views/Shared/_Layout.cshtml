<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
        <title>@ViewBag.Title - fundus</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap.min.css")" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap-responsive.min.css")" />
        <!--[if lt IE 7]><link rel="stylesheet" href="@Url.Content("~/Content/bootstrap-ie6.min.css")"><![endif]-->
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap-image-gallery.min.css")" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap-datepicker.css")" />
        <link rel="Stylesheet" type="text/css" href="@Url.Content("~/Content/jquery.fileupload-ui.css")" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/fundus.css")" />
        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
            <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    </head>

    <body>
        <div class="navbar navbar-fixed-top">
            @Html.Partial("_NavBar")
        </div>
        <!--<div class="breadcrumb">
           @RenderSection("Breadcrumbs", required: false)
        </div>-->
        <div class="container">
            <div id="message-box-container"></div>
            @RenderBody()
            @Html.Partial("_Footer")
        </div>
        
        <script src="@Url.Content("~/Scripts/xdate.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.18.custom.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.tablednd.0.6.min.js")" type="text/javascript"></script>        
        <script src="@Url.Content("~/Scripts/tmpl.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/load-image.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/canvas-to-blob.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bootstrap-image-gallery.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bootstrap-datepicker.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.iframe-transport.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.fileupload.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.fileupload-ip.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.fileupload-ui.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.smooth-scroll.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/tinymce/jquery.tinymce.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/fundus.locale.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/fundus.js")" type="text/javascript"></script>
        <script type="text/javascript">
            $(function() {
                fundus.baseUri = '@Url.Content("~")';
                fundus.init();
            });
        </script>

        <div class="modal hide fade" id="modal-show-error">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">×</a>
                <h3>Fehler</h3>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <a href="#" class="btn" data-dismiss="modal">Close</a>
            </div>  
        </div>

        <!-- modal-gallery is the modal dialog used for the image gallery -->
        <div id="modal-gallery" class="modal modal-gallery hide fade">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title"></h3>
            </div>
            <div class="modal-body"><div class="modal-image"></div></div>
            <div class="modal-footer">
                <a class="btn btn-primary modal-next">Weiter <i class="icon-arrow-right icon-white"></i></a>
                <a class="btn btn-info modal-prev"><i class="icon-arrow-left icon-white"></i> Zurück</a>
                <a class="btn btn-success modal-play modal-slideshow" data-slideshow="5000"><i class="icon-play icon-white"></i> Diashow</a>
                <a class="btn modal-download" target="_blank"><i class="icon-download"></i> Herunterladen</a>
            </div>
        </div>
    </body>
</html>
