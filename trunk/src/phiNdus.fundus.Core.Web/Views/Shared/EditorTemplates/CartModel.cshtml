@model phiNdus.fundus.Core.Web.Models.CartModel

<table width="100%" class="list">
    <thead>
        <tr>
            <th>Bezeichnung</th>
            <th>Anzahl</th>
            <th>Ausleihbeginn</th>
            <th>Ausleihende</th>
            <th>Ausleihdauer</th>
            <th>Preis</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items) {
            <tr>
                <td>@item.Caption</td>
                <td>@Html.TextBoxFor(m => item.Amount, new { @class = "text-input", @width = "50px" })</td>
                <td>@Html.EditorFor(m => item.Begin)</td>
                <td>@Html.EditorFor(m => item.End)</td>
                <!-- updaten wenn datum ändert-->
                <td>@item.End.Subtract(item.Begin).TotalDays Tag(e)</td>
                <td>@item.Price.ToString("C2", new System.Globalization.CultureInfo("de-CH"))</td>
                <td>
                    @Html.ActionLinkIcon("Aus dem Warenkorb entfernen", ActionLinkIcon.Remove, "RemoveItem", new { gid = @item.Gid })
                </td>
            </tr>
        }
    </tbody>
</table>