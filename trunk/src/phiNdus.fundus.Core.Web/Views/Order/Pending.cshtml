@model OrdersTableViewModel


<h2>Hängige Bestellungen</h2>

<table>
    <tr>
        <th>Nummer</th>
        <th>Datum</th>
        <th>Reservierer</th>
        <th>Anzahl Artikel</th>
        <th></th>
    </tr>

@foreach (var item in Model.Orders) {
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @item.CreateDate
        </td>
        <td>
            @item.ReserverName
        </td>
        <td>
            @item.Items.Count
        </td>
        <td>
            <a href="#">Anzeigen</a> |
            <a href="#">Bestätigen</a> |
            <a href="#">Ablehnen</a> |
            <a href="#">PDF drucken</a>
        </td>
    </tr>
}

</table>