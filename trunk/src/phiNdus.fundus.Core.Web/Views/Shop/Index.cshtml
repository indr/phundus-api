@model ArticlesViewModel

@{
    ViewBag.Title = "Shop";
}

@section Breadcrumbs {
     @Html.ActionLink("Shop", "Index") &gt; &Uuml;bersicht
}

<div class="row">
    <div class="span6">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="span6">
        <div class="toolbar pull-right">
            <div class="btn-group">
                <a class="btn" href="#"><i class="icon-th-large"></i></a>
                <a class="btn" href="#"><i class="icon-th"></i></a>
                <a class="btn" href="#"><i class="icon-th-list"></i></a>
            </div>
        </div>
    </div>
</div>

<h3>Artikel</h3>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Menge</th>
            <th>Reservierbar</th>
            <th>Ausleihbar</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var each in Model.Articles) {
            <tr>
                <td>@each.GetPropertyValue(2)</td>
                <td>@each.GetPropertyValue(3)</td>
                <td>@each.GetPropertyValue(6)</td>
                <td>@each.GetPropertyValue(7)</td>
                @*<td>@Html.ActionLink("Detail", "Details", new { id = each.Id })</td>*@
                <td>@Html.ActionLinkIcon("Details anzeigen", ActionLinkIcon.Detail, "Details", new { id = each.Id })</td>
            </tr>
        }
    </tbody>
</table>
