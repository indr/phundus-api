@model phiNdus.fundus.Core.Web.ViewModels.CartViewModel
@{
    ViewBag.Title = "Warenkorb";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
     @Html.ActionLink("Warenkorb", "Index") &gt; &Uuml;bersicht
}

@using (Html.BeginForm())
{

<h2>Warenkorb</h2>
<p></p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Artikel</th>
            <th>Von</th>
            <th>Bis</th>
            <th>Anzahl</th>
            <th>Stückpreis</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items.Count == 0)
        {
            <tr>
                <td class="no-data" colspan="6">Der Warenkorb ist leer.</td>
            </tr>
        }
        else
        {
            for (var idx = 0; idx < Model.Items.Count; idx++)
            {
                @Html.HiddenFor(x => Model.Items[idx].Id)
                <tr>
                    <td>@Model.Items[idx].Caption</td>    
                    <td>@Html.EditorFor(x => Model.Items[idx].Begin)</td>
                    <td>@Html.EditorFor(x => Model.Items[idx].End)</td>
                    <td>@Html.EditorFor(x => Model.Items[idx].Amount)</td>
                    <td>tbd</td>
                    <td>@Model.Items[idx].Price</td>
                    <td>
                        @Html.ActionLink(new Appearance { Caption = "Entfernen", Button = Button.Danger }, "Remove", new { id = Model.Items[idx].Id, version = Model.Items[idx].Version })
                    </td>
                </tr>       
            }
        }
    </tbody>
</table>
        if (Model.Items.Count > 0)
        {
    <div class="form-actions">
        @Html.SubmitButton("Aktualisieren", "")
        @*@Ajax.ActionLink(new Appearance { Button = phiNdus.fundus.Core.Web.Helpers.Button.Normal, Caption="Aktualisieren"}, "CheckOut", new {}, new AjaxOptions {})*@
        @*@Html.SubmitButton("Bestellen")*@
    </div>
}
}