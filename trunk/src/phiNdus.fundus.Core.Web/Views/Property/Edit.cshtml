@model phiNdus.fundus.Core.Web.Models.PropertyViewModel

@{
    ViewBag.Title = "Edit";
}

@section Breadcrumbs {
     @Html.ActionLink("Artikel", "Index", "Article") &gt;
     @Html.ActionLink("Eigenschaften", "List") &gt;
     Bearbeiten

}

@*<h2>Edit</h2>*@

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Artikeleigenschaft bearbeiten</legend>
        
        @Html.HiddenFor(x => x.Item.Id)
        @Html.HiddenFor(x => x.Item.Version)

        <div class="editor-label">
            Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Item.Caption)
            @Html.ValidationMessageFor(model => model.Item.Caption)
        </div>

        <div class="editor-label">
            Datentyp (Achtung, ich, Inder, bin zu blöd den richtigen Wert vorzubelegen (o:  )
        </div>
        <div class="editor-field">
            @if (Model.Item.IsSystemProperty)
            {
                @Model.Item.DataType.ToString()
            }
            else
            {
                @Html.DropDownListFor(model => model.Item.DataType, Model.PropertyDataTypes)
                @Html.ValidationMessageFor(model => model.Item.DataType)
            }
        </div>

        <div class="editor-label">
            Systemeigenschaft
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Item.IsSystemProperty)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Zurück zur Übersicht", "Index")
</div>
