@model FieldViewModel

@{
    ViewBag.Title = "Feld \"" + Model.Item.Caption + "\" bearbeiten";
}

@section Breadcrumbs {
     @Html.ActionLink("Artikel", "Index", "Article") &gt;
     @Html.ActionLink("Felder", "List") &gt;
     @ViewBag.Title
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    
    @Html.HiddenFor(x => x.Item.Id)
    @Html.HiddenFor(x => x.Item.Version)

    @Html.EditorForModel()

    <p>
        <input type="submit" value="Speichern" /> | @Html.ActionLink("Abbrechen", "Index")
    </p>
}
