@model phiNdus.fundus.Core.Web.Models.ArticleListModel

@{
    ViewBag.Title = "List";
}

@section Breadcrumbs {
     @Html.ActionLink("Artikel", "List") &gt; &Uuml;bersicht
}

@*<h2>List</h2>*@


<script src="@Url.Content("~/Scripts/MicrosoftAjax.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/MicrosoftMvcAjax.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>


<p>
    @Html.ActionLink("Neuer Artikel hinzufügen", "Create") |
    @Html.ActionLink("Artikeleigenschaften bearbeiten", "Index", "Property")
</p>
<table>
    <tr>
        <th>
            Id
        </th>
        @foreach (var heading in Model.Headings)
        {
            <th>
                @heading.Caption
            </th>
        }
        <th></th>
    </tr>
    
    @foreach (var item in Model.Items) {
        <tr>
            <td>
                @item.Id.ToString()
            </td>
            @foreach (var heading in Model.Headings)
            {
                <td>
                    @if (item.IsDiscriminator(heading.Id))
                    {
                        @Html.Raw("<i>D</i>")
                    }
                    else
                    {
                        @item.GetPropertyValue(heading.Id)
                    }
                </td>
            }
             <td>
                 @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                 @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                 @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                 @Ajax.ActionLink("Delete (Ajax)", "Delete", new { id = item.Id }, new AjaxOptions { Confirm = "Sind Sie sicher, dass Sie den Artikel löschen möchten?", HttpMethod="Delete", UpdateTargetId="divToUpdate" })
             </td>
        </tr>
    }
</table>
<div id="divToUpdate">
    <p>Hier steht was drin.</p>
</div>
<p>
    @Html.ActionLink("Neuer Artikel hinzufügen", "Create") |
    @Html.ActionLink("Artikeleigenschaften bearbeiten", "Index", "Property")
</p>
