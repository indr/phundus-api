@model ArticleViewModel

@{
    ViewBag.Title = "Artikel löschen";
}

@section Breadcrumbs {
     @Html.ActionLink("Artikel", "Index") &gt; Löschen
}

<h2>Artikel löschen</h2>
<p>Möchten Sie diesen Artikel wirklich löschen?</p>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Löschen" /> |
        @Html.ActionLink("Abbrechen", "Details", new { id = Model.Id }) |
        @Html.ActionLink("Zurück zur Übersicht", "Index")
    </p>
}
