@model phiNdus.fundus.Core.Web.Models.ArticleViewModel

@{
    ViewBag.Title = "Create";
}

@section Breadcrumbs {
     @Html.ActionLink("Artikel", "Index") &gt; Erstellen
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>Neuer Artikel erfassen</h2>

@using (Html.BeginForm("Action", "Article"))
{
    @Html.ValidationSummary(true)

    @Html.EditorForModel()    
    
    <p>
        <input type="submit" name="create" value="Speichern" /> | @Html.ActionLink("Abbrechen", "Index")
    </p>
}

