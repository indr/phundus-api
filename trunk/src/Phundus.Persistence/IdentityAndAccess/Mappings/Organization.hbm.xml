<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Phundus.Core" namespace="Phundus.Core.OrganizationAndMembershipCtx.Model">

  <class name="Organization" table="[Organization]">
    <id name="Id">
      <generator class="native" />
    </id>
    <version name="Version" />
    <property name="Name" />
    <property name="Address" />
    <property name="Coordinate" />
    <property name="Startpage" />
    <property name="EmailAddress" />
    <property name="Website" />
    <property name="CreateDate" update="false" />
    <property name="DocTemplateFileName" />

    <set name="Memberships" cascade="all-delete-orphan" lazy="true" inverse="true" >
      <key column="OrganizationId" />
      <one-to-many class="Membership" />
    </set>
  </class>
</hibernate-mapping>