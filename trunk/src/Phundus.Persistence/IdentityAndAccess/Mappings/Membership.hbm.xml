<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Phundus.Core" namespace="Phundus.Core.IdentityAndAccessCtx.DomainModel" auto-import="false">

  <class name="Membership" table="[Membership]" lazy="false">
    <id name="Id">
      <generator class="foreign">
        <param name="property">User</param>
      </generator>
    </id>
    <version name="Version" />

    <one-to-one name="User" class="User" constrained="true" />

    <property name="SessionKey" unique="true" length="24" />
    <property name="Password" access="nosetter.camelcase-underscore" />
    <property name="Salt" />
    <property name="Email">
      <column name="Email" unique-key="MembershipEmail" />
    </property>
    <property name="RequestedEmail" />
    <property name="IsApproved" />
    <property name="IsLockedOut" />
    <property name="CreateDate" update="false" />
    <property name="LastLogOnDate" />
    <property name="LastPasswordChangeDate" />
    <property name="LastLockoutDate" />
    <property name="Comment" />
    <property name="ValidationKey" />
  </class>
</hibernate-mapping>