<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Phundus.Core" namespace="Phundus.Core.ShopCtx">
  <class name="Cart" table="[Cart]">
    <id name="Id">
      <generator class="native" />
    </id>
    <version name="Version" />
    
    <many-to-one name="Customer" class="Phundus.Core.IdentityAndAccessCtx.DomainModel.User" column="CustomerId" />
    
    <set name="Items" cascade="all-delete-orphan" lazy="true" inverse="true" >
      <key column="CartId" />
      <one-to-many class="CartItem" />
    </set>
  </class>
</hibernate-mapping>