<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="phiNdus.fundus.Core.Domain"
                   namespace="phiNdus.fundus.Core.Domain.Entities">

  <class name="Membership" table="[Membership]" lazy="false">
    <id name="Id">
      <generator class="foreign">
        <param name="property">User</param>
      </generator>
    </id>
    <version name="Version" />

    <one-to-one name="User" class="User" constrained="true" />

    <property name="Password" />
    <property name="Email" />
    <property name="IsApproved" />
    <property name="IsLockedOut" />
    <property name="CreateDate" />
    <property name="LastLogOnDate" />
    <property name="LastPasswordChangeDate" />
    <property name="LastLockoutDate" />
    <property name="Comment" />
  </class>
</hibernate-mapping>