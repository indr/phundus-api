                    {
                        foreach (var each in Model.Organizations)
                        {
                            if (each == Model.Selected)
                            {
                                <li><a href="@Url.Action(OrganizationActionNames.Select, ControllerNames.Organization, new { id = each.Id })"><i class="icon-check"></i> @each.Name</a></li>
