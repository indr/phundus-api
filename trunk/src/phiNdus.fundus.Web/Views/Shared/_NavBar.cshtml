@using Phundus.Web
@model phiNdus.fundus.Web.ViewModels.Layout.NavBarModel
           
<div class="navbar-inner">
    <div class="container">
        @if (Model.Selected == null)
        {
            @Html.ActionLink("phundus", HomeActionNames.Index, ControllerNames.Home, new {}, new {@class = "brand"})
        }
        else
        {
            <a href="@Url.Content(Model.Selected.OrganizationUrl)" class="brand">@Model.Selected.OrganizationName</a>
        }
                    
        <ul class="nav">
            <li>
                @Html.ActionLink("Shop", ShopActionNames.Index, ControllerNames.Shop)
            </li>
    
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Organisationen<b class="caret"></b></a>
                <ul class="dropdown-menu">
                    @if (Request.IsAuthenticated && User.IsInRole("User") && (Model.Memberships.Count > 0))
                    {
                        foreach (var each in Model.Memberships)
                        {
                            if (each == Model.Selected)
                            {
                                <li><a href="@Url.Action(OrganizationActionNames.Select, ControllerNames.Organization, new {id = each.OrganizationId})"><i class="icon-check"></i> @each.OrganizationName</a></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action(OrganizationActionNames.Select, ControllerNames.Organization, new {id = each.OrganizationId})"><i class="icon-check icon-white"></i> @each.OrganizationName</a></li>
                            }
                        }
                        <li class="divider"></li>
                    }
                    <li><a href="@Url.Content("~/organization#/search")">Suchen</a></li>
                    @*<li><a href="@Url.Content("~/organization#/establish")">Gründen</a></li>*@
                </ul>
            </li>
            @if (Request.IsAuthenticated && User.IsInRole("User"))
            {
                if (User.IsInRole("Beta"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dokumente<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Bestellungen", "", "documents", null, null, "orders", null, null)</li>
                            <li>@Html.ActionLink("Verträge", "", "documents", null, null, "contracts", null, null)</li>
                        </ul>
                    </li>
                }
                else
                {
                    <li>@Html.ActionLink("Bestellungen", "", "documents", null, null, "orders", null, null)</li>
                }

                if ((Model.Selected != null) && (Model.Selected.MembershipRole == "Chief"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Verwaltung<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Content("~/management#/orders")">Bestellungen</a></li>
                            @if (User.IsInRole("Beta"))
                            {
                                <li><a href="@Url.Content("~/management#/contracts")">Verträge</a></li>
                            }
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Neues Material", ArticlesActionNames.Create, ControllerNames.Articles)</li>
                            <li>@Html.ActionLink("Erfasstes Material", ArticlesActionNames.Index, ControllerNames.Articles)</li>
                            <li class="divider"></li>
                            <li><a href="@Url.Content("~/management#/members")">Mitglieder</a></li>
                            <li><a href="@Url.Content("~/management#/applications")">Beitrittsanfragen</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Content("~/management#/settings")">Einstellungen</a></li>
                            <li><a href="@Url.Content("~/management#/files")">Dateien</a></li>
                        </ul>
                    </li>
                }


                if (User.IsInRole("Admin"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Benutzer", UsersActionNames.Index, ControllerNames.Users)</li>
                            <li class="divider"></li>
                            <li><a href="@Url.Content("~/admin#/eventlog")">Ereignislog</a></li>
                            <li><a href="@Url.Content("~/admin#/schemaupdate")">Schema-Update</a></li>
                            <li><a href="@Url.Content("~/elmah")" target="_blank">ELMAH</a></li>
                        </ul>
                    </li>
                }
            }
        </ul>

        @Html.Partial("_UpperMenu")
    </div>
</div>
        