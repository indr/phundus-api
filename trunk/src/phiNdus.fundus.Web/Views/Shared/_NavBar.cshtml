@using Phundus.Web
@model phiNdus.fundus.Web.ViewModels.Layout.NavBarModel

<div class="header">
    <div class="navbar navbar-inverse" role="navigation" data-ng-controller="NavCtrl">
        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#js-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="/shop" title="phundus">ph</a>
            </div>
            
            <div class="collapse navbar-collapse" id="js-navbar-collapse">

                <form class="navbar-form navbar-left" role="search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Suchen und phinden!" data-ng-model="queryString">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default" data-ng-click="search()" title="phinden!">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                </form>

                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated && User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Bestellungen", "", "documents", null, null, "orders", null, null)</li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li data-access-level="accessLevels.admin" class="dropdown">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button"
                               aria-haspopup="true" aria-expanded="false">Administration<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/users">Benutzer</a></li>
                                <li class="divider"></li>
                                <li><a href="/admin#/eventlog">Ereignislog</a></li>
                                <li><a href="/admin#/schemaupdate">Schema-Update</a></li>
                                <li><a href="/elmah" target="_blank">ELMAH</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @if (Request.IsAuthenticated && User.Identity.IsAuthenticated)
                    {
                        <li data-access-level="accessLevels.user" title="Warenkorb">
                            <a href="/cart"><span class="glyphicon glyphicon-shopping-cart"></span><span class="visible-xs-inline"> Warenkorb</span></a>
                        </li>
                        <li data-access-level="accessLevels.user" title="@User.Identity.Name">                            
                            <a href="/#/users/@Model.UserId"><span class="glyphicon glyphicon-user"></span><span class="visible-xs-inline loggedOnTag">@User.Identity.Name</span></a>
                        </li>
                        <li data-access-level="accessLevels.user" class="dropdown">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button"
                               aria-haspopup="true" aria-expanded="false"><span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                @foreach (var each in Model.Memberships)
                                {
                                    <li><a href="@each.OrganizationUrl"><i class=" icon-check icon-white"></i> @each.OrganizationName</a></li>
                                }
                                @if (Model.Memberships.Count > 0)
                                {
                                    <li class="divider"></li>
                                }
                                <li><a href="/account/profile">Einstellungen</a></li>                                
                                <li><a href="/#/logout" class="logOffTag">Abmelden</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li data-access-level="accessLevels.anon"><a href="/account/signup">Registrieren</a></li>
                        <li data-access-level="accessLevels.anon"><a href="/#/login">Anmelden</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

