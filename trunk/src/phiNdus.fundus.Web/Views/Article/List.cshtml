@model ArticlesTableViewModel
@{
    ViewBag.Title = "Material";
}

<h2>@ViewBag.Title</h2>
<p></p>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Id
        </th>
        @foreach (var heading in Model.Headings)
        {
            <th>
                @heading.Caption
            </th>
        }
        <th style="width: 190px;"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Articles) {
        <tr>
            <td>
                @item.Id.ToString()
            </td>
            @foreach (var heading in Model.Headings)
            {
                <td>
                    @if (item.IsDiscriminator(heading.Id))
                    {
                        @Html.Raw("<i>D</i>")
                    }
                    else
                    {
                        @item.GetPropertyValue(heading.Id)
                    }
                </td>
            }
             <td>
                <div class="btn-toolbar" style="margin: 0;">
                    <div class="btn-group">
                        <a href="@Url.Action("Edit", new { id = item.Id})" class="btn">Bearbeiten</a>
                        <a href="#" data-toggle="dropdown" class="btn dropdown-toggle"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Fields", new { id = item.Id})">Eigenschaften</a></li>
                            <li><a href="@Url.Action("Images", new { id = item.Id})">Dateien</a></li>
                            <li><a href="@Url.Action("Categories", new { id = item.Id})">Kategorien</a></li>
                            <li><a href="@Url.Action("Availability", new { id = item.Id})">Verfügbarkeit</a></li>
                        </ul>
                    </div>
                    <div class="btn-group">
                        @Html.ActionLink(new Appearance { Caption = "Löschen", Button = Button.Danger}, ArticlesActionNames.Delete, new { id = item.Id, version = item.Version })                 
                    </div>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
